// ============================================
// FinancePro â€” Prisma Schema
// ============================================
// Normalized to 3NF with strategic indexes.
// Prepared for future bank connection integration.

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Enums
// ============================================

enum TransactionType {
  INCOME
  EXPENSE
}

enum TransactionStatus {
  PAID
  PENDING
  OVERDUE
}

enum AccountType {
  CHECKING
  SAVINGS
  CREDIT_CARD
  CASH
  INVESTMENT
}

enum RecurrenceType {
  MONTHLY
  BIWEEKLY
  WEEKLY
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum ImportStatus {
  PROCESSING
  COMPLETED
  FAILED
}

// ============================================
// User & Auth
// ============================================

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  accounts     Account[]
  categories   Category[]
  transactions Transaction[]
  budgets      Budget[]
  goals        Goal[]
  importLogs   ImportLog[]
  invitesCreated InviteCode[] @relation("InviteCreator")

  @@map("users")
}

model InviteCode {
  id             String   @id @default(uuid())
  code           String   @unique
  createdByUserId String
  usedByEmail    String?
  isUsed         Boolean  @default(false)
  expiresAt      DateTime
  createdAt      DateTime @default(now())

  // Relations
  createdBy User @relation("InviteCreator", fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([code])
  @@map("invite_codes")
}

// ============================================
// Financial Accounts
// ============================================

model Account {
  id      String      @id @default(uuid())
  userId  String
  name    String
  type    AccountType @default(CHECKING)
  balance Decimal     @default(0) @db.Decimal(12, 2)
  icon    String?
  color   String?
  isActive Boolean    @default(true)
  createdAt DateTime  @default(now())

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([userId])
  @@map("accounts")
}

// ============================================
// Categories & Subcategories (2-level hierarchy)
// ============================================

model Category {
  id        String          @id @default(uuid())
  userId    String
  name      String
  type      TransactionType
  icon      String?
  color     String?
  isDefault Boolean         @default(false)
  isActive  Boolean         @default(true)
  createdAt DateTime        @default(now())

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  subcategories Subcategory[]
  budgets       Budget[]

  @@unique([userId, name, type])
  @@index([userId, type])
  @@map("categories")
}

model Subcategory {
  id         String   @id @default(uuid())
  categoryId String
  name       String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())

  // Relations
  category     Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([categoryId, name])
  @@map("subcategories")
}

// ============================================
// Transactions
// ============================================

model Transaction {
  id              String            @id @default(uuid())
  userId          String
  accountId       String
  subcategoryId   String
  type            TransactionType
  amount          Decimal           @db.Decimal(12, 2)
  description     String
  notes           String?
  date            DateTime
  status          TransactionStatus @default(PENDING)
  recurringRuleId String?
  externalId      String?           // Future: bank reconciliation
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  account       Account        @relation(fields: [accountId], references: [id], onDelete: Cascade)
  subcategory   Subcategory    @relation(fields: [subcategoryId], references: [id], onDelete: Restrict)
  recurringRule RecurringRule? @relation(fields: [recurringRuleId], references: [id], onDelete: SetNull)

  @@index([userId, date])
  @@index([userId, type, date])
  @@index([subcategoryId])
  @@index([recurringRuleId])
  @@map("transactions")
}

model RecurringRule {
  id        String         @id @default(uuid())
  userId    String
  type      RecurrenceType
  startDate DateTime
  endDate   DateTime?
  isActive  Boolean        @default(true)
  createdAt DateTime       @default(now())

  // Relations
  transactions Transaction[]

  @@index([userId])
  @@map("recurring_rules")
}

// ============================================
// Budgets (per category, per month)
// ============================================

model Budget {
  id          String   @id @default(uuid())
  userId      String
  categoryId  String
  limitAmount Decimal  @db.Decimal(12, 2)
  month       Int      // 1-12
  year        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId, month, year])
  @@index([userId, month, year])
  @@map("budgets")
}

// ============================================
// Financial Goals
// ============================================

model Goal {
  id            String     @id @default(uuid())
  userId        String
  name          String
  description   String?
  targetAmount  Decimal    @db.Decimal(12, 2)
  currentAmount Decimal    @default(0) @db.Decimal(12, 2)
  deadline      DateTime?
  status        GoalStatus @default(ACTIVE)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // Relations
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  contributions GoalContribution[]

  @@index([userId, status])
  @@map("goals")
}

model GoalContribution {
  id        String   @id @default(uuid())
  goalId    String
  amount    Decimal  @db.Decimal(12, 2)
  date      DateTime @default(now())
  notes     String?
  createdAt DateTime @default(now())

  // Relations
  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
  @@map("goal_contributions")
}

// ============================================
// Import Logs
// ============================================

model ImportLog {
  id           String       @id @default(uuid())
  userId       String
  fileName     String
  bankSource   String?      // e.g. "nubank", "mercadopago", "caixa"
  totalRows    Int
  importedRows Int          @default(0)
  skippedRows  Int          @default(0)
  status       ImportStatus @default(PROCESSING)
  errorMessage String?
  createdAt    DateTime     @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("import_logs")
}
